# Ensure consistent dependency installation
save-exact=true
engine-strict=true

# Improve installation performance
network-timeout=100000
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use the latest version of npm
use-npm=true

# Ensure package-lock.json is generated
package-lock=true

# Set registry to npm's official registry
registry=https://registry.npmjs.org/

# Enable strict SSL
strict-ssl=true

# Set maximum number of concurrent connections
maxsockets=50 